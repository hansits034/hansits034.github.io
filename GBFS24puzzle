#include <bits/stdc++.h>

using namespace std;

struct State {
    int value;
    vector<int> nums;
    string expr;

    bool operator<(const State& other) const {
        return abs(value - 24) < abs(other.value - 24);
    }
};

vector<int> a(4);

bool ok = 0;
int iterations = 0;

void solve() {
    if (ok) return;
    priority_queue<State> pq;
    for (int i = 0; i < 4; i++) {
        pq.push({a[i], {i}, to_string(a[i])});
    }

    while (!pq.empty()) {
        State cur = pq.top();
        pq.pop();
        iterations++;
        if (cur.value == 24) {
            cout << "Yes \n" << cur.expr << "\n";
            ok = 1;
            return;
        }
        for (int i = 0; i < 4; i++) {
            if (find(cur.nums.begin(), cur.nums.end(), i) == cur.nums.end()) {
                vector<int> new_nums = cur.nums;
                new_nums.push_back(i);

                pq.push({cur.value + a[i], new_nums, cur.expr + "+" + to_string(a[i])});
                pq.push({cur.value - a[i], new_nums, cur.expr + "-" + to_string(a[i])});
                pq.push({cur.value * a[i], new_nums, cur.expr + "*" + to_string(a[i])});
                if (a[i] != 0) {
                    pq.push({cur.value / a[i], new_nums, cur.expr + "/" + to_string(a[i])});
                }
            }
        }
    }
    cout << "No solution found.\n";
}

int main() {
    cin.tie(0)->sync_with_stdio(false);
    for (int i = 0; i < 4; i++) cin >> a[i];
    solve();
    cout << "\nIterations: " << iterations; 
    return 0;
}
